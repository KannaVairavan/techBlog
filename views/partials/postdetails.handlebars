<div class="card">
    <div class="card-header">

        <div row mb-4>
            <header>

                <div class="col-md-5">
                    <a href="/post/{{id}}">
                        {{title}}
                    </a>
                </div>

                <div class="col-md-7">
                    Posted by {{user.username}} on {{format_date date_created}}
                </div>

            </header>
        </div>


    </div>

    <div class="card-body">
        {{content}}
    </div>

</div>